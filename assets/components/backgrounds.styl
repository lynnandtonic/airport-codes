// Background photos

// 404
.lost
  background-image: url(images/starwars.gif)

// About
.about
  background-image: url(images/airplane.gif)

// Contribute
.contribute
  @media (max-width: 700px)
    background-image: url(images/conair-small.jpg)
  @media (min-width: 701px)
    background-image: url(images/conair.jpg)

$media-sm-max = 700px
$media-md-max = 1500px

// Cards
.card

  for $code, $photographer in $images
    &.{$code}
      .background { background-image: url($card/$code\-$photographer.$image-ext) }

// Detail Small
@media (max-width: $media-sm-max)
  .detail

    for $code, $photographer in $images
      &.{$code} { background-image: url($small/$code\-$photographer.$image-ext) }

// Detail Medium
@media (min-width: $media-sm-max + 1px) and (max-width: $media-md-max)
  .detail

    for $code, $photographer in $images
      &.{$code} { background-image: url($medium/$code\-$photographer.$image-ext) }

// Detail Large
@media (min-width: $media-md-max + 1px)
  .detail

    for $code, $photographer in $images
      &.{$code} { background-image: url($large/$code\-$photographer.$image-ext) }
