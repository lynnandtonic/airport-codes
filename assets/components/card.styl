//- Card styling

.card
  position: relative
  float: left
  background: black

  &.hidden
    display: none

  .background
    width: 100%
    height: 100%
    background: no-repeat center center
    background-size: cover
    position: absolute
    z-index: 1
    opacity: 0
    transition(opacity .3s ease-in)

  &.loaded
    .background
      opacity: 1

  a
    padding: 80px 20px
    display: block
    position: relative
    z-index: 2
    background: black(.35)
    font-size: 60px
    font-weight: $font-weight-bold
    text-align: center
    text-transform: uppercase
    text-shadow: 0 0 10px black(.7)
    color: white

    span
      opacity: 0
      transition(opacity .3s ease-in)

    @media (max-width: 400px)
      padding: 50px 20px
      font-size: 46px

    &:hover,
    &:focus
      background: transparent

    &:focus
      outline: none
      box-shadow: inset 0 0 0 15px black(.4)

  width: 50%

  @media (min-width: 600px)
    width: 33.33%

  @media (min-width: 800px)
    width: 25%

  @media (min-width: 1100px)
    width: 20%

  @media (min-width: 1500px)
    width: 16.66%

  @media (min-width: 2000px)
    width: 14.28%

.wf-active
  .card a span
    opacity: 1
.wf-inactive
  .card a span
    opacity: 1

.card-contribute
  position: relative
  background: $grey-drk

  .placeholder
    visibility: hidden

  .card-contribute-content
    width: 80%
    {centerContent}

    &:after
      {centerHoriz}
      bottom: 0
      background: white(.5)
      border-radius: 50%
      content: '+'
      color: white
      text-align: center
      text-shadow: none
      transition(all .2s ease-in)

  &:hover
    .card-contribute-content:after
      background: $blue

  @media (max-width: 400px)

    .card-contribute-content
      padding-bottom: 50px
      font-size: 18px
      line-height: 22px

      &:after
        width: 40px
        height: @width
        padding: 10px 0
        font-size: 40px

  @media (min-width: 401px)

    .card-contribute-content
      padding-bottom: 60px
      font-size: 22px
      line-height: 28px

      &:after
        width: 50px
        height: @width
        padding: 13px 0
        font-size: 50px
