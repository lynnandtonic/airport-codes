// Site info pages

.site-info
  width: 100vw
  height: 100vh
  position: fixed
  top: 0
  left: 0
  z-index: 10
  background: black no-repeat 50% 50%
  background-size: cover
  text-align: center
  color: white
  {fadeIn}
  transition(opacity .2s ease-out, visibility .2s ease-out)

  &.hidden
    visibility: hidden
    opacity: 0
    -webkit-transition-delay: 0s
    -moz-transition-delay: 0s
    transition-delay: 0s

  .back
    z-index: 10

  .container
    width: 100%
    height: 100%
    padding: 30px 15px
    position: relative
    z-index: 2
    overflow-y: auto
    // -webkit-overflow-scrolling: touch

  .content
    max-width: 550px
    margin: 80px auto 50px

    @media (max-width: 500px)
      margin-top: 50px

  h1
    margin-bottom: 20px
    font-size: 40px

  p, ul
    margin-bottom: 15px
    text-align: left

    a
      border-bottom: 1px dotted transparent
      color: $blue
      font-weight: $font-weight-medium

      &:hover,
      &:focus
        border-color: $blue

      &:focus
        outline: none

  .quote
    font-size: 22px
    text-align: center

  ul
    padding-left: 30px
    font-family: $font-family-clavo
    font-style: italic
    font-size: 18px
    line-height: 1.4
    list-style-type: disc

    li
      margin-bottom: 15px

  hr
    margin: 30px 0
    border: none
    border-bottom: 1px dotted white(.3)

  // Airport stats
  .stats
    margin-top: 30px
    text-align: center
    font-size: 20px

    p
      margin-bottom: 0
      display: inline-block
      text-align: center

    span
      padding: 0 5px
      display: inline-block
      vertical-align: middle

    .stat
      font-family: $font-family-brandon
      font-weight: $font-weight-bold
      font-style: normal
      font-size: 50px

  .footnote
    margin-top: 40px

    p
      margin-bottom: 10px
      font-size: 15px

      a
        color: white
